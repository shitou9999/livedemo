<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/head_bg</item>
        <item name="colorPrimaryDark">@color/head_bg</item>
        <item name="colorAccent">@color/head_bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- 首页 Tab RadioButton 样式-->
    <style name="MainTabLinearLayoutStyle">
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 首页 Tab RadioButton 样式-->
    <style name="AppTheme.MainTabRadioButtonStyle">
        <item name="android:paddingTop">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@drawable/selector_tab_main_text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- PublishPanel 样式-->
    <style name="PublishPanelLinearLayoutStyle">
        <item name="android:paddingTop">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="PublishPanelButtonStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorGrey333333</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 程序版本更新 -->
    <style name="system_update_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">
            @drawable/common_system_update_dialog_bg_shape
        </item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="system_update_download_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">
            @drawable/common_system_update_dialog_bg_shape
        </item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- 自定义CustomProgressDialog -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">
            @android:style/Animation.Dialog
        </item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">
            @drawable/common_round_background
        </item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="full_image_progressbar"
           parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">
            @drawable/common_progress_large_holo
        </item>
    </style>

    <style name="default_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/def_divider</item>
        <item name="android:background">@color/def_DividerColor</item>
    </style>

    <style name="default_edittext_style">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/edit_text_size_samll</item>
        <item name="android:textColor">@color/def_EditTextColor</item>
        <item name="android:textColorHint">@color/def_HintTextColor</item>
        <!-- 光标跟随文字颜色 -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="base_edit_style" parent="default_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/small_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="short_checkcode_style" parent="base_edit_style">
        <item name="android:inputType">numberDecimal</item>
        <!--<item name="android:digits">0123456789</item>-->
        <item name="android:imeOptions">actionDone</item>
    </style>


    <style name="CheckCodeEditStyle">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">4</item>
        <item name="android:textColor">@color/colorGrey333333</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:digits">0123456789</item>
    </style>


    <!-- 包含单行编辑框的ViewGroup样式 -->
    <style name="edit_for_viewgroup_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/def_option_height</item>
        <!--<item name="android:layout_gravity">center_vertical</item>-->
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:focusable">true</item>-->
        <!--<item name="android:focusableInTouchMode">true</item>-->
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/small_margin</item>
    </style>
    <style name="long_button_style">
        <item name="android:background">@drawable/selector_long_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_medilum</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- 选择照片底部弹出层 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!-- Me option for TextView-->
    <style name="MeOptionStyleForTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/fab_margin</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/fab_margin</item>
    </style>

    <!-- Right Arrows Style -->
    <style name="MeOptionStyleForArrows">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">@dimen/fab_margin</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/selector_right</item>
    </style>

    <style name="button_style_v21">
        <item name="android:buttonStyle">@android:style/Widget.Button</item>
        <item name="android:textAppearance">
            @android:style/TextAppearance.DeviceDefault.Widget.TextView
        </item>
    </style>
    <style name="default_option_viewgroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/selector_option_normal</item>
    </style>
    <style name="view_gone_visibility">
        <item name="android:visibility">gone</item>
    </style>
    <style name="view_invisibility">
        <item name="android:visibility">invisible</item>
    </style>
    <style name="CheckBox_style">
        <item name="android:background">@drawable/draw_check_default</item>
        <item name="android:button">@null</item>
    </style>
</resources>
