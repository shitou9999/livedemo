<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/head_bg</item>
        <item name="colorPrimaryDark">@color/head_bg</item>
        <item name="colorAccent">@color/head_bg</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- 首页 Tab RadioButton 样式-->
    <style name="MainTabLinearLayoutStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 首页 Tab RadioButton 样式-->
    <style name="AppTheme.MainTabRadioButtonStyle">
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@drawable/selector_tab_main_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 程序版本更新 -->
    <style name="system_update_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">
            @drawable/common_system_update_dialog_bg_shape
        </item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="system_update_download_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">
            @drawable/common_system_update_dialog_bg_shape
        </item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- 自定义CustomProgressDialog -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">
            @android:style/Animation.Dialog
        </item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">
            @drawable/common_round_background
        </item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="full_image_progressbar" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">
            @drawable/common_progress_large_holo
        </item>
    </style>

    <style name="IGXDefault_Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/def_divider</item>
        <item name="android:background">@color/def_DividerColor</item>
    </style>
</resources>
