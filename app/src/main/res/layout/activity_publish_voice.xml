<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <tv.kuainiu.widget.TitleBarView
        android:id="@+id/tbv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mytitle="语音直播"
        app:rightText="发布" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_color"
            android:orientation="vertical">

            <include
                layout="@layout/include_publish_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <include
                layout="@layout/include_pick_picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ivAddCover_height" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入标题"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorGrey400" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorGreyPublish"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="文章栏目"
                    android:textColor="@color/colorRed500" />

                <Spinner
                    android:id="@+id/spCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="end"
                    android:textColor="@color/colorGreyPublishText" />
            </RelativeLayout>
            <tv.kuainiu.widget.ExpandListView
                android:id="@+id/elv_friends_post_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
<!--            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="请说话..." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="您还可以继续录音5次"
                android:textColor="@color/colorGrey400"
                android:textSize="12sp" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/btnFlag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:text="标签"
                    android:textColor="@color/colorBlue500"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/btnFlag"
                    android:text="插入:"
                    android:textColor="@color/colorGreyPublishText" />
            </RelativeLayout>

            <tv.kuainiu.widget.tagview.TagListView
                android:id="@+id/tagListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/common_margin"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:paddingTop="5dip"
                app:horizontalSpacing="@dimen/tag_horizontal_spacing"
                app:orientation="horizontal"
                app:verticalSpacing="@dimen/tag_vertical_spacing" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:background="@color/colorBlue50">

        <RelativeLayout
            android:id="@+id/recording_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/recording_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="按住说话"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recording_hint"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                tools:text="60s" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivVoiceBtn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/recording_container"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/selector_publish_voice_icon" />
    </RelativeLayout>
</LinearLayout>