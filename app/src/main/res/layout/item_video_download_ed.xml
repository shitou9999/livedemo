<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    android:id="@+id/download_ed_swipe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    app:clickToClose="true"
    app:show_mode="lay_down">

    <LinearLayout
        android:id="@+id/ll_delete"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorRed500"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white_color"
            android:textSize="16sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_major"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/selector_option_normal"
        android:paddingBottom="@dimen/small_margin"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <RelativeLayout
            android:id="@+id/rl_check"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/bg_selected_button"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@id/rl_check"
            android:layout_toRightOf="@id/rl_check"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_toEndOf="@id/iv_cover"
            android:layout_toRightOf="@id/iv_cover"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:textColor="@color/colorGrey800"
            android:textSize="@dimen/text_size_micro"
            tools:text="sasdasdasdasdafgdfgdsdfsfs.mp4"/>

        <TextView
            android:id="@+id/tv_video_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/min_margin"
            android:textColor="@color/def_TextColor"
            android:textSize="@dimen/text_size_micro"
            tools:text="100 M"
            />
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>