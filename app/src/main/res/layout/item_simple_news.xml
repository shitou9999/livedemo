<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_news_item_root"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/selector_option_normal"
                android:paddingBottom="@dimen/small_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/small_margin">

    <RelativeLayout
        android:id="@+id/rl_group"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:src="@mipmap/ic_def_error"/>

        <TextView
            android:id="@+id/tv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="#ff77ff"
            android:paddingLeft="@dimen/micro_margin"
            android:paddingRight="@dimen/micro_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_min"
            tools:ignore="RelativeOverlap"
            tools:text="盘中"/>


    </RelativeLayout>


    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/rl_group"
        android:layout_toRightOf="@id/rl_group"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="@color/def_TextColor"
        tools:text="张三丰--16世纪太极拳创始人，道教宗师"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/rl_group"
        android:layout_toRightOf="@id/rl_group"
        android:textColor="@color/colorAmber550"
        android:textSize="@dimen/text_size_micro"
        tools:text="张三丰"/>

    <TextView
        android:id="@+id/tv_timeBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorDefaultTime"
        android:textSize="@dimen/text_size_micro"
        tools:text="3小时前"/>


    <TextView
        android:id="@+id/tv_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@id/tv_timeBefore"
        android:layout_toStartOf="@id/tv_timeBefore"
        android:textColor="@color/colorDefaultTime"
        android:textSize="@dimen/text_size_micro"
        tools:ignore="RelativeOverlap"
        tools:text="3.7万次播放"/>


</RelativeLayout>