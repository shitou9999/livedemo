<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_red_temp"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/tv_home_item_index_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/home_item_hot_name"
        tools:text="上证指数"/>

    <TextView
        android:id="@+id/tv_home_item_hot_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_home_item_index_text"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/home_item_hot_index"
        tools:text="15545.55"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_home_item_hot_index"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home_item_index_text_percent1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/home_item_hot_text_percent"
            tools:text="+16%"/>

        <TextView
            android:id="@+id/tv_home_item_index_text_percent2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/home_item_hot_text_percent"
            tools:text="+19%"/>
    </LinearLayout>
</RelativeLayout>

