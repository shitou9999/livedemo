<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rl_login_content_root"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_color"
              android:orientation="vertical"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_close"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:background="@drawable/selector_option_normal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_alignParentLeft="true"
        android:text="关闭"
        android:textColor="@color/colorRed500"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/tv_qc"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:background="@drawable/selector_option_normal"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text="扫描二维码"
        android:textColor="@color/colorGrey333333"
        android:textSize="14sp"/>
</RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/diannao"/>

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_computer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="二维码登录确认"
            android:textColor="@color/colorGrey333333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_error_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorRed500"
            android:textSize="14sp"
            tools:text="登录失败"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_qc_login_bg"
            android:text="@string/login"
            android:textColor="@drawable/selector_qc_login_textcolor"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_cancel_login"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="取消登录"
            android:textSize="14sp"/>
    </RelativeLayout>


</LinearLayout>
