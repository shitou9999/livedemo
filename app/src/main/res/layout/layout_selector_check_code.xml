<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@drawable/selector_option_normal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_message_black_18dp"/>

        <TextView
            android:id="@+id/btn_message"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/def_option_height"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="获取短信验证码"
            android:textColor="@color/colorGrey900"/>
    </LinearLayout>


    <View style="@style/IGXDefault_Divider"/>

    <LinearLayout
        android:id="@+id/ll_call"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/selector_option_normal"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_call_black_18dp"/>

        <TextView
            android:id="@+id/btn_voice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/def_option_height"
            android:layout_gravity="center_horizontal"

            android:gravity="center"
            android:text="获取语音验证码"
            android:textColor="@color/colorGrey900"/>
    </LinearLayout>


</LinearLayout>