<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <tv.kuainiu.widget.TitleBarView
        android:id="@+id/tbv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:right_visibility="invisible"
        app:title="全部评论" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_comment_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite800"
        app:layout_scrollFlags="scroll|enterAlways"
        app:tabIndicatorColor="@color/colorAmber550"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorAmber550"
        app:tabTextColor="@color/def_TextColor" />


    <include layout="@layout/content_comment_list" />

</LinearLayout>
