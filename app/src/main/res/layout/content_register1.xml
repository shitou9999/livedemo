<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rl_region_selector"
                android:layout_width="match_parent"
                android:layout_height="@dimen/def_option_height"
                android:background="@drawable/selector_option_normal3"
                android:paddingLeft="@dimen/small_margin"
                android:paddingRight="@dimen/small_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="国家/地区"
                    android:textColor="@color/colorGrey800"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="normal"
                    />

                <TextView
                    android:id="@+id/tv_region_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="中国"
                    android:textColor="@color/colorBlue500"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="normal"
                    />

            </RelativeLayout>

            <View style="@style/IGXDefault_Divider"/>

            <LinearLayout
                style="@style/IGXEdit_ForViewGroup_style">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|right"
                    android:text="+"
                    />

                <EditText
                    android:id="@+id/et_region"
                    style="@style/CheckCodeEditStyle"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/micro_margin"
                    android:text="86"
                    />

                <View
                    android:layout_width="1.5px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@color/def_DividerColor"
                    />


                <EditText
                    android:id="@+id/et_account"
                    style="@style/IGXBase_Edit_Style"
                    android:digits="0123456789"
                    android:hint="@string/hint_input_phoneNumber"
                    android:inputType="phone"
                    android:maxLength="11"
                    />
            </LinearLayout>

            <View
                style="@style/IGXDefault_Divider"/>


            <LinearLayout
                style="@style/IGXEdit_ForViewGroup_style">

                <EditText
                    android:id="@+id/et_check_code"
                    style="@style/IGXShortCheckCode_style"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/min_margin"
                    android:layout_weight="1"
                    android:hint="@string/check_code"
                    android:inputType="number"
                    android:paddingLeft="0dp"
                    android:singleLine="true"
                    />

                <Button
                    android:id="@+id/btn_push_check_code"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:text="@string/submit_check_code"
                    android:textColor="@color/def_TextColor"
                    />
            </LinearLayout>

            <View
                style="@style/IGXDefault_Divider"
                />

            <LinearLayout
                style="@style/IGXEdit_ForViewGroup_style">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/password_fourSpaces"
                    />

                <EditText
                    android:id="@+id/et_password1"
                    style="@style/IGXBase_Edit_Style"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:singleLine="true"/>
            </LinearLayout>

            <View
                style="@style/IGXDefault_Divider"
                />

            <LinearLayout
                style="@style/IGXEdit_ForViewGroup_style">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/password_affirm"
                    />

                <EditText
                    android:id="@+id/et_password2"
                    style="@style/IGXBase_Edit_Style"
                    android:hint="@string/hint_password_affirm"
                    android:inputType="textPassword"/>
            </LinearLayout>

        </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        style="@style/IGXLong_Button_style"
        android:layout_below="@id/ll_input"
        android:layout_marginTop="@dimen/activity_vertical_margin2x"
        android:text="@string/register"
        />

</RelativeLayout>
