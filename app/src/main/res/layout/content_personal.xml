<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.me.activity.PersonalActivity"
    tools:showIn="@layout/activity_personal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cimg_photo"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            app:civ_border_color="@android:color/transparent"
            app:civ_border_overlay="true"
            app:civ_border_width="2dp"
            tools:src="@mipmap/head_nor"
            />

        <TextView
            android:id="@+id/tv_personalPhoneNumberTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_vertical_margin"
            tools:text="131****6545"
            />


        <RelativeLayout
            android:id="@+id/rl_personalPerfect"
            android:layout_width="match_parent"
            android:layout_height="@dimen/def_option_height"
            android:background="@drawable/selector_option_normal">

            <TextView
                android:id="@+id/tv_personallabel1"
                style="@style/MeOptionStyleForTextView"
                android:text="@string/label_individuality_signature"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/tv_personalNickname"
                style="@style/MeOptionStyleForTextView"
                android:layout_toRightOf="@id/tv_personallabel1"
                tools:text="你咋不上天呢"/>

            <ImageView
                android:id="@+id/iv_Nickname_right"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:scaleType="centerInside"
                android:src="@drawable/selector_right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_toLeftOf="@+id/iv_Nickname_right"
                android:gravity="center_vertical"
                android:text="@string/perfect"/>


        </RelativeLayout>

        <!--</android.support.v7.widget.CardView>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/label_security_settings"
            android:textSize="@dimen/text_size_small"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_personalEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/def_option_height"
                android:background="@drawable/selector_option_normal">

                <TextView
                    android:id="@+id/tv_personallabel3"
                    style="@style/MeOptionStyleForTextView"
                    android:text="@string/label_email_binding"
                    android:textSize="@dimen/text_size_small"/>

                <TextView
                    android:id="@+id/tv_personalEmail"
                    style="@style/MeOptionStyleForTextView"
                    android:layout_toRightOf="@id/tv_personallabel3"
                    tools:text="j****@163.com"/>

                <ImageView
                    android:id="@+id/iv_Email_right"
                    android:layout_width="10dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_right"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_toLeftOf="@+id/iv_Email_right"
                    android:text="@string/binding"/>
            </RelativeLayout>

            <View
                style="@style/IGXDefault_Divider"
                />

            <RelativeLayout
                android:id="@+id/rl_personalPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/def_option_height"
                android:background="@drawable/selector_option_normal">

                <TextView
                    android:id="@+id/tv_personallabel2"
                    style="@style/MeOptionStyleForTextView"
                    android:text="@string/label_alter_password"
                    android:textSize="@dimen/text_size_small"/>

                <TextView
                    style="@style/MeOptionStyleForTextView"
                    android:layout_toRightOf="@id/tv_personallabel2"
                    android:text=""/>

                <ImageView
                    android:id="@+id/iv_Password_right"
                    android:layout_width="10dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_right"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_toLeftOf="@+id/iv_Password_right"
                    android:gravity="center_vertical"
                    android:text="@string/alter"/>
            </RelativeLayout>

            <View
                style="@style/IGXDefault_Divider"
                />

            <RelativeLayout
                android:id="@+id/rl_personalAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/def_option_height"
                android:background="@drawable/selector_option_normal">

                <TextView
                    android:id="@+id/tv_personallabel4"
                    style="@style/MeOptionStyleForTextView"
                    android:text="@string/label_login_account"
                    android:textSize="@dimen/text_size_small"/>

                <TextView
                    android:id="@+id/tv_personalPhoneNumber2"
                    style="@style/MeOptionStyleForTextView"
                    android:layout_toRightOf="@id/tv_personallabel4"
                    tools:text="133****4567"/>

                <ImageView
                    android:id="@+id/iv_Account_right"
                    android:layout_width="10dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_right"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_toLeftOf="@+id/iv_Account_right"
                    android:gravity="center_vertical"
                    android:text="@string/alter"/>
            </RelativeLayout>

            <View
                style="@style/IGXDefault_Divider"
                />

            <RelativeLayout
                android:id="@+id/rl_personalIdentity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/def_option_height"
                android:background="@drawable/selector_option_normal">

                <TextView
                    android:id="@+id/tv_personallabel5"
                    style="@style/MeOptionStyleForTextView"
                    android:text="@string/label_identity_authentication"
                    android:textSize="@dimen/text_size_small"/>

                <TextView
                    android:id="@+id/tv_personal_identity_Card"
                    style="@style/MeOptionStyleForTextView"
                    android:layout_toRightOf="@id/tv_personallabel5"
                    tools:text="400******4561"/>

                <ImageView
                    android:id="@+id/iv_Identity_right"
                    android:layout_width="10dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_right"
                    />

                <TextView
                    android:id="@+id/tv_personal_idno_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/fab_margin"
                    android:layout_toLeftOf="@+id/iv_Identity_right"
                    android:gravity="center_vertical"
                    android:text="@string/certificationed"/>
            </RelativeLayout>

        </LinearLayout>
        <!--</android.support.v7.widget.CardView>-->


        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp"/>

        <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <RelativeLayout
            android:id="@+id/rl_personalLogout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/def_option_height"
            android:background="@drawable/selector_option_normal"
            >

            <TextView
                android:id="@+id/tv_personallabel6"
                style="@style/MeOptionStyleForTextView"
                android:text="@string/label_logout"
                android:textSize="@dimen/text_size_small"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/fab_margin"
                android:contentDescription="@string/about_we"
                android:scaleType="centerInside"
                android:src="@drawable/selector_right"
                />
        </RelativeLayout>
        <!--</android.support.v7.widget.CardView>-->


        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
