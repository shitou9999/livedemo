<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/vBlank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGrey300" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_publish_dynamic"
                style="@style/PublishPanelLinearLayoutStyle">

                <ImageView
                    android:id="@+id/iv_publish_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_publish_bolg" />

                <TextView
                    android:id="@+id/tv_publish_dynamic"
                    style="@style/PublishPanelButtonStyle"
                    android:text="动态消息" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_publish_voice"
                style="@style/PublishPanelLinearLayoutStyle">

                <ImageView
                    android:id="@+id/iv_publish_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_publish_voice" />

                <TextView
                    android:id="@+id/tv_publish_voice"
                    style="@style/PublishPanelButtonStyle"
                    android:text="语音消息" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_publish_article"
                style="@style/PublishPanelLinearLayoutStyle">

                <ImageView
                    android:id="@+id/iv_publish_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_publish_word" />

                <TextView
                    android:id="@+id/tv_publish_article"
                    style="@style/PublishPanelButtonStyle"
                    android:text="博文观点" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_publish_video"
                style="@style/PublishPanelLinearLayoutStyle">

                <ImageView
                    android:id="@+id/iv_publish_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_publish_movie" />

                <TextView
                    android:id="@+id/tv_publish_video"
                    style="@style/PublishPanelButtonStyle"
                    android:text="直播计划" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/selector_tag_close" />
    </LinearLayout>
</LinearLayout>
