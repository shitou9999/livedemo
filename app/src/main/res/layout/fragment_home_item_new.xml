<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_option_normal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/ivNewIamge"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorGrey230"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvNewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivNewIamge"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ivNewIamge"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="@color/colorGrey333333"
        android:textSize="@dimen/text_size_small"
        tools:text="直播下周调整能否结束" />

    <TextView
        android:id="@+id/tvTeacherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNewTitle"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ivNewIamge"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/colorTeacherName"
        android:textSize="@dimen/text_size_small"
        tools:text="老师名称" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivNewIamge"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="10-12"
        android:textColor="@color/colorGrey500" />
</RelativeLayout>
